{
  "name": "eme",
  "description": "elegant markdown editor",
  "main": "app/index.js",
  "scripts": {
    "test": "npm run lint",
    "lint": "npm run lint:app && npm run lint:src",
    "lint:app": "eslint app/index.js app/eme --ext .js",
    "lint:src": "eslint src/* src/* --ext .js --ext .vue",
    "dev": "node tasks/dev.js",
    "install:all": "npm install && cd app && npm install",
    "start": "cross-env NODE_ENV=development electron app/",
    "build": "rm -rf app/dist && webpack --progress --config scripts/webpack.config.prod.js --profile --json > stats.json",
    "watch": "webpack --config scripts/webpack.config.dev.js --watch",
    "dev-server": "node scripts/server.js",
    "macos": "node tasks/build.js macos",
    "linux": "node tasks/build.js linux",
    "windows": "node tasks/build.js windows"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/egoist/eme.git"
  },
  "keywords": [
    "markdown",
    "editor"
  ],
  "devDependencies": {
    "autoprefixer": "^6.4.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-1": "^6.5.0",
    "cross-env": "^2.0.0",
    "css-loader": "^0.23.1",
    "devtron": "^1.2.1",
    "electron-devtools-installer": "^1.1.5",
    "electron-packager": "^7.5.1",
    "electron-prebuilt": "^1.3.2",
    "eslint": "^3.12.2",
    "eslint-config-xo-space": "^0.14.0",
    "eslint-plugin-babel": "^4.0.0",
    "eslint-plugin-vue": "^1.0.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "json-loader": "^0.5.4",
    "minimist": "^1.2.0",
    "postcss-import": "^9.0.0",
    "postcss-loader": "^1.2.1",
    "postcss-mixins": "^5.0.0",
    "postcss-nested": "^1.0.0",
    "postcss-simple-vars": "^3.0.0",
    "scripy": "^0.3.0",
    "shelljs": "^0.7.4",
    "style-loader": "^0.13.1",
    "svg-inline-loader": "^0.6.1",
    "url-loader": "^0.5.7",
    "vue-hot-reload-api": "^2.0.6",
    "vue-html-loader": "^1.2.3",
    "vue-loader": "^10.0.2",
    "vue-style-loader": "^1.0.0",
    "vue-template-compiler": "^2.1.8",
    "webpack": "^1.14.0",
    "webpack-hot-middleware": "^2.12.1",
    "webpack-visualizer-plugin": "^0.1.5"
  },
  "dependencies": {
    "babel-runtime": "^6.11.6",
    "codemirror": "^5.17.0",
    "color-preset": "^0.1.1",
    "fetch-enhance": "^0.1.1",
    "highlight.js": "^9.5.0",
    "hint.css": "2.3.2",
    "markdown-it": "^7.0.0",
    "markdown-it-front-matter": "^0.1.2",
    "markdown-it-task-lists": "^1.4.0",
    "object-picker": "^0.2.0",
    "pify": "^2.3.0",
    "sanitize-html": "^1.13.0",
    "tildify": "^1.2.0",
    "unique-random-array": "^1.0.0",
    "vue": "^2.1.8",
    "vuex": "^2.1.1",
    "wordcount": "^1.1.1"
  },
  "optionalDependencies": {
    "electron-installer-debian": "^0.4.0"
  }
}
