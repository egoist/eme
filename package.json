{
  "name": "eme",
  "description": "elegant markdown editor",
  "main": "app/index.js",
  "scripts": {
    "test": "npm run lint",
    "lint": "npm run lint:app && npm run lint:src",
    "lint:app": "eslint app/index.js app/eme/*.js",
    "lint:src": "eslint src/**/*.vue src/**/*.js",
    "dev": "node tasks/dev.js",
    "install:all": "npm install && cd app && npm install",
    "app": "cd app && cross-env NODE_ENV=development electron .",
    "start": "electron app/",
    "build": "rm -rf app/dist && webpack --progress --config scripts/webpack.config.prod.js",
    "watch": "webpack --config scripts/webpack.config.dev.js --watch",
    "dev-server": "node scripts/server.js",
    "macos": "node tasks/build.js macos",
    "linux": "node tasks/build.js linux",
    "windows": "node tasks/build.js windows"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/egoist/eme.git"
  },
  "keywords": [
    "markdown",
    "editor"
  ],
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-1": "^6.5.0",
    "cross-env": "^2.0.0",
    "css-loader": "^0.23.1",
    "devtron": "^1.2.1",
    "electron-devtools-installer": "^1.1.5",
    "electron-installer-debian": "^0.3.1",
    "electron-packager": "^7.5.1",
    "electron-prebuilt": "^1.3.2",
    "eslint": "^3.1.1",
    "eslint-config-xo-space": "^0.14.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-vue": "^0.1.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "json-loader": "^0.5.4",
    "minimist": "^1.2.0",
    "postcss-import": "^8.1.2",
    "postcss-loader": "^0.9.1",
    "postcss-mixins": "^5.0.0",
    "postcss-nested": "^1.0.0",
    "postcss-simple-vars": "^3.0.0",
    "scripy": "^0.2.2",
    "style-loader": "^0.13.1",
    "svg-inline-loader": "^0.6.1",
    "url-loader": "^0.5.7",
    "vue-loader": "^9.3.2",
    "vue-style-loader": "^1.0.0",
    "webpack": "^1.13.1",
    "webpack-hot-middleware": "^2.12.1",
    "webpack-visualizer-plugin": "^0.1.5"
  },
  "dependencies": {
    "babel-runtime": "^6.9.2",
    "codemirror": "^5.17.0",
    "highlight.js": "^9.5.0",
    "hint.css": "2.3.2",
    "lodash.debounce": "^4.0.6",
    "markdown-it": "^7.0.0",
    "markdown-it-front-matter": "^0.1.2",
    "markdown-it-task-lists": "^1.4.0",
    "object-picker": "^0.2.0",
    "pify": "^2.3.0",
    "tildify": "^1.2.0",
    "vue": "^2.0.0-rc.2",
    "vuex": "^1.0.0-rc.2",
    "word-count": "^0.2.2"
  }
}
